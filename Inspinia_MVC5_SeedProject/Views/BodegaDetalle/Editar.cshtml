@model Inspinia_MVC5_SeedProject.Models.tbBodegaDetalle



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Listado", "Index_BodegaDetalle")
            </li>
            <li class="active">
                <strong>Editar</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index_BodegaDetalle", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">

                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="control-label col-md-2">Bodega Id</label>
                            <div class="col-md-10">
                                <input type="text" class="text-box single-line" readonly="readonly" value="000000000" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Producto Codigo</label>
                            <div class="col-md-10">
                                <input type="text" class="text-box single-line" value="00000" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Cantidad Minima</label>
                            <div class="col-md-10">
                                <input type="text" class="text-box single-line" value="100" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Cantidad Maxima</label>
                            <div class="col-md-10">
                                <input type="text" class="text-box single-line" value="500" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Punto Reorden</label>
                            <div class="col-md-10">
                                <select class="form-control" id="" name="">
                                    <option>Seleccione Bodega</option>
                                    <option>San Pedro Sula </option>
                                    <option>Choloma</option>
                                    <option>La Ceiba</option>
                                    <option>Tegucigalpa</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Crear" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Index_BodegaDetalle", null, new { @class = "btn btn-white" })
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
