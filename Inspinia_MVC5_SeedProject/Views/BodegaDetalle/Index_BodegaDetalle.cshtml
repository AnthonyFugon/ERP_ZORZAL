@model IEnumerable<Inspinia_MVC5_SeedProject.Models.tbBodegaDetalle>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista De los Detalles De la Bodega</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar", "Crear", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped" id="tbBodegaDetalle">
                        <thead>
                            <tr>
                                <th>
                                   Cantidad Minima
                                </th>
                                <th>
                                   Cantidad Maxima
                                </th>
                                <th>
                                    Punto Reorden
                                </th>
                                <th>
                                   Responsable Bodega
                                </th>
                                <th>
                                    Producto Descripcion
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    100
                                </td>
                                <td>
                                   500
                                </td>
                                <td>
                                   La Ceiba
                                </td>
                                <td>
                                    Juan Perez
                                </td>
                                <td>
                                    Descripcion del Producto
                                </td>
                                <td>
                                    @Html.ActionLink("Detalles", "Detalles", new { @class = "btn btn-primary btn-sm" })
                                    @Html.ActionLink("Editar", "Editar",new{ @class = "btn btn-white btn-sm" })
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
 </div>




@section scripts{
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#tbBodegaDetalle').DataTable({

            "searching": true,
            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sSearch": "Buscar",
                "sLengthMenu": "Mostrar _MENU_Registros Por Página",
                "sInfo": "Mostrando _START_ a _END_ Entradas"
            },
        });
        });
    </script>
}