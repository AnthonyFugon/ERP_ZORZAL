 @model IEnumerable<ERP_ZORZAL.Models.tbPedido>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>tbPedido</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of tbPedido</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table id="DataTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ped_Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ped_FechaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ped_UsuarioCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ped_FechaCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ped_UsuarioModifica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ped_FechaModica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbCliente.clte_RTN_IDT_PASSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbSucursal.mun_Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ped_Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ped_FechaEntrega)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ped_UsuarioCrea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ped_FechaCrea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ped_UsuarioModifica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ped_FechaModica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbCliente.clte_RTN_IDT_PASSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbSucursal.mun_Id)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ped_Codigo }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.ped_Codigo }, new { @class = "btn btn-white btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ped_Codigo }, new { @class = "btn btn-white btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>
 
<script src="~/Scripts/app/DataTable.js"></script>


