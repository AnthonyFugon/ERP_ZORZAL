@model IEnumerable<ERP_ZORZAL.Models.tbProveedor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Proveedores</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong></strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5></h5>
					<div class="ibox-tools">
						@Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-hover table-bordered"  id="datatables">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.prov_NombreContacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prov_Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prov_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prov_Telefono)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.prov_UsuarioCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prov_FechaCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prov_UsuarioModifica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prov_FechaModifica)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.tbMunicipio.dep_Codigo)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.prov_NombreContacto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_Telefono)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.prov_UsuarioCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_FechaCrea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_UsuarioModifica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prov_FechaModifica)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.tbMunicipio.dep_Codigo)
        </td>
        <td>
			@Html.ActionLink("Detalles", "Details", new { id=item.prov_Id }, new { @class = "btn btn-primary btn-sm"})
            @Html.ActionLink("Editar", "Edit", new { id=item.prov_Id }, new { @class = "btn btn-white btn-sm"})
           
        </td>
    </tr>
}
        </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatables').DataTable(
        {
            "searching": true,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sSearch": "Buscar",
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sInfo": "Mostrando _START_ a _END_ Entradas",
            }
        });
    });
</script>






