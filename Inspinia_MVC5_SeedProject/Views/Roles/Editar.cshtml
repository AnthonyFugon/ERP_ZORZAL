@model ERP_ZORZAL.Models.tbRoles

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Roles</h2>
        <ol class="breadcrumb">
          
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar al Listado", "Index", null, new { @class = "" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Roles</h5>
                </div>
                <div class="ibox-content">

                   
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <div class="form-group">
                                <label class="control-label col-md-1">Id</label>
                                <div class="col-md-4">
                                    <input class="text-box single-line" value="1" readonly>
                                </div>
                                <label class="control-label col-md-1">Descripcion</label>
                                <div class="col-md-4">
                                    <input class="text-box single-line ">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-1">Creado por:</label>
                                <div class="col-md-4">
                                    <input class="text-box single-line" value="Antonio" readonly>
                                </div>
                                <label class="control-label col-md-1">Creado en:</label>
                                <div class="col-md-4">
                                    <input class="text-box single-line" value="29/11/2018" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-1">Modificado por:</label>
                                <div class="col-md-4">
                                    <input class="text-box single-line" value="Antonio" readonly>
                                </div>
                                <label class="control-label col-md-1">Modificado en:</label>
                                <div class="col-md-4">
                                    <input class="text-box single-line" value="29/11/2018" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.Partial("_AccesoRoles", Model)
                                </div>
                            </div>    

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    


                </div>
            </div>
        </div>
    </div>
</div>
