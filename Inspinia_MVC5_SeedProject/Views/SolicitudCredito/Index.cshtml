            </th>
            <th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_FechaSolicitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_FechaAprobacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_MontoSolicitado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_MontoAprobado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_DiasSolicitado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_DiasAprobado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_UsuarioCrea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_FechaCrea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_UsuarioModicacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_FechaModifica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbCliente.clte_RTN_Identidad_Pasaporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbEstadoSolicitudCredito.escre_Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.cred_Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.cred_Id }, new { @class = "btn btn-white btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.cred_Id }, new { @class = "btn btn-white btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>
