            <th>
                @Html.DisplayNameFor(model => model.cred_FechaCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cred_UsuarioModicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cred_FechaModifica)
