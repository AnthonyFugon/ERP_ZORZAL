@model ERP_ZORZAL.Models.tbUsuario

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Create</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Listado", "Index")
            </li>
            <li class="active">
                <strong>Crear</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar a Lista", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Usuario</h5>
                </div>
                <div class="ibox-content">
                    
                        <div class="form-horizontal">
                           
                            <div class="form-group">
                                <label class="control-label col-md-2">Id Usuario</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Nombre Usuario</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line"  />
                                </div>
                            </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Rol Usuario</label>

                                    <div class="col-md-10">
                                        <input type="text" class="text-box single-line"  />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Contraseña</label>

                                    <div class="col-md-10">
                                        <input type="password" class="text-box single-line"  />
                                    </div>
                                </div>
                            
                            <div class="form-group">
                                <label class="control-label col-md-2">Nombre Usuario</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Apellido Usuario</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Correo Electronico</label>

                                <div class="col-md-10">
                                    <input type="email" class="text-box single-line"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Estado</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Razon Estado</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Administrador</label>

                                <div class="col-md-10">
                                    <input type="text" class="text-box single-line"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Crear" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>


