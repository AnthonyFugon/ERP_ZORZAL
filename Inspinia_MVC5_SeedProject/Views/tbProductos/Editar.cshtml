@model Inspinia_MVC5_SeedProject.Models.tbProductos

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar Productos</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Editar", "Index")
            </li>
            <li class="active">
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Productos</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.prod_Codigo)

                            <label>Descripcion Producto</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.prod_Descripcion)
                                    @Html.ValidationMessageFor(model => model.prod_Descripcion)
                                </div>
                            </div>

                            <label>Fecha Creacion Producto</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.prod_FechaCreacion)
                                    @Html.ValidationMessageFor(model => model.prod_FechaCreacion)
                                </div>
                            </div>


                            <label>Precio Compra/Venta</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.prod_PrecioCompraVenta)
                                    @Html.ValidationMessageFor(model => model.prod_PrecioCompraVenta)
                                </div>
                            </div>

                            <label>Marca</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.prod_Marca)
                                    @Html.ValidationMessageFor(model => model.prod_Marca)
                                </div>
                            </div>

                            <label>Categoria</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Categ_prod_IDCategoria)
                                    @Html.ValidationMessageFor(model => model.Categ_prod_IDCategoria)
                                </div>
                            </div>

                            <label>SubCategoria</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.SubCateg_prod_IDSubCategoria)
                                    @Html.ValidationMessageFor(model => model.SubCateg_prod_IDSubCategoria)
                                </div>
                            </div>

                            <label>Estado</label>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.estad_prod_Codigo)
                                    @Html.ValidationMessageFor(model => model.estad_prod_Codigo)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
