@model Inspinia_MVC5_SeedProject.Models.tbTasasCambio

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Lista", "Index")
            </li>
            <li class="active">
                <strong>Crear Nuevo</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Nueva Tasa de Cambio</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <label class="control-label col-md-2">Codigo Tasa Cambio</label>
                                @*@Html.LabelFor(model => model.tcam_Codigo, new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    <input id="Text1" type="text" value="2" class="col-md-10" />
                                    @*@Html.EditorFor(model => model.tcam_Codigo)
                                    @Html.ValidationMessageFor(model => model.tcam_Codigo)*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Moneda Origen</label>
                                @*@Html.LabelFor(model => model.mnda_ISO, new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    <input id="Text1" type="text"  value="HND" class="col-md-10"/>
                                    @*@Html.EditorFor(model => model.mnda_ISO)
                                    @Html.ValidationMessageFor(model => model.mnda_ISO)*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">CodMonedaDestino</label>
                                @*@Html.LabelFor(model => model.tcam_ISOMonedaDestino, new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    <input id="Text1" type="text" value="EUR" class="col-md-10" />
                                    @*@Html.EditorFor(model => model.tcam_ISOMonedaDestino)
                                    @Html.ValidationMessageFor(model => model.tcam_ISOMonedaDestino)*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Fecha </label>
                                @*@Html.LabelFor(model => model.tcam_FechaTasasCambio, new { @class = "control-label col-md-2" })*@
                                <div class="col-md-10">
                                    <input id="Text1" type="text" value="2018-11-23" class="col-md-10" />
                                    @*@Html.EditorFor(model => model.tcam_FechaTasasCambio)
                                    @Html.ValidationMessageFor(model => model.tcam_FechaTasasCambio)*@
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Crear" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
